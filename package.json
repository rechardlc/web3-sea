{
  "name": "web3-preview",
  "version": "1.0.0",
  "description": "SEA GameFi - Web3 鱼类NFT游戏平台",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "compile": "hardhat compile",
    "copy:abi": "node scripts/copy-contracts.js",
    "compile:full": "npm run compile && npm run copy:contracts",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat ignition deploy ignition/modules/SEAGameFiModule.ts --network hardhat",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/SEAGameFiModule.ts --network sepolia",
    "deploy:mainnet": "hardhat ignition deploy ignition/modules/SEAGameFiModule.ts --network mainnet",
    "deploy:script:local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:script:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:script:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "update:env": "node scripts/update-env-from-deployment.js deployments/hardhat.json",
    "update:env:ignition": "node scripts/update-env-from-ignition.js",
    "deploy:local:full": "npm run compile && npm run deploy:local && npm run copy:abi && npm run update:env:ignition && npm run dev",
    "deploy:sepolia:full": "npm run compile && npm run deploy:sepolia && npm run copy:abi && npm run update:env:ignition -- --network sepolia && npm run build",
    "deploy:mainnet:full": "npm run compile && npm run deploy:mainnet && npm run copy:abi && npm run update:env:ignition -- --network mainnet && npm run build",
    "node": "hardhat node",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:all": "concurrently -n \"node,frontend\" -c \"blue,green\" \"npm run node\" \"npm run dev\"",
    "build:all": "npm run compile && npm run build",
    "clean:all": "npm run clean && rm -rf .next node_modules",
    "clean:cache": "npm run clean && rm -rf .next",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "setup:env": "node -e \"const fs=require('fs'); if(!fs.existsSync('.env')){fs.copyFileSync('.env.example','.env');console.log('✅ Created .env');} if(!fs.existsSync('.env.local')){if(fs.existsSync('.env.example')){fs.copyFileSync('.env.example','.env.local');console.log('✅ Created .env.local');}}\""
  },
  "keywords": [
    "web3",
    "nft",
    "gamefi",
    "ethereum",
    "solidity",
    "nextjs",
    "wagmi"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-progress": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "lucide-react": "^0.344.0",
    "wagmi": "^2.7.0",
    "@tanstack/react-query": "^5.28.0",
    "viem": "^2.7.6",
    "@wagmi/core": "^2.7.0",
    "@wagmi/connectors": "^2.2.0",
    "date-fns": "^3.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "0.15.0",
    "@nomicfoundation/hardhat-ignition-viem": "0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-toolbox-viem": "4.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.0",
    "@nomicfoundation/hardhat-viem": "2.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/chai": "4.2.0",
    "@types/chai-as-promised": "7.1.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "chai": "4.2.0",
    "concurrently": "^8.2.2",
    "hardhat": "^2.26.0",
    "hardhat-gas-reporter": "2.3.0",
    "prettier": "^3.2.5",
    "solidity-coverage": "0.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "dotenv": "^16.4.5",
    "tailwindcss": "^3.4.1",
    "postcss": "^8",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "volta": {
    "node": "22.18.0"
  }
}
