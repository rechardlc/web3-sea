{
  "name": "web3-preview",
  "version": "1.0.0",
  "description": "SEA GameFi - Web3 鱼类NFT游戏平台",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "node": "hardhat node",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "frontend:dev": "cd app && npm run dev",
    "frontend:build": "cd app && npm run build",
    "frontend:start": "cd app && npm run start",
    "frontend:lint": "cd app && npm run lint",
    "frontend:install": "cd app && npm install",
    "dev": "npm run frontend:dev",
    "dev:node": "concurrently -n \"node,frontend\" -c \"blue,green\" \"npm run node\" \"npm run frontend:dev\"",
    "dev:all": "concurrently -n \"node,frontend\" -c \"blue,green\" \"npm run node\" \"npm run frontend:dev\"",
    "build": "npm run compile && npm run frontend:build",
    "build:contracts": "npm run compile",
    "build:frontend": "npm run frontend:build",
    "install:all": "npm install && npm run frontend:install",
    "clean:all": "npm run clean && cd app && rm -rf .next node_modules",
    "clean:cache": "npm run clean && cd app && rm -rf .next",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit && cd app && tsc --noEmit",
    "setup:env": "node -e \"const fs=require('fs'); if(!fs.existsSync('.env')){fs.copyFileSync('.env.example','.env');console.log('✅ Created .env');} if(!fs.existsSync('app/.env.local')){if(fs.existsSync('app/.env.example')){fs.copyFileSync('app/.env.example','app/.env.local');console.log('✅ Created app/.env.local');}}\""
  },
  "keywords": [
    "web3",
    "nft",
    "gamefi",
    "ethereum",
    "solidity",
    "nextjs",
    "wagmi"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "0.15.0",
    "@nomicfoundation/hardhat-ignition-viem": "0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-toolbox-viem": "4.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.0",
    "@nomicfoundation/hardhat-viem": "2.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/chai": "4.2.0",
    "@types/chai-as-promised": "7.1.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "chai": "4.2.0",
    "concurrently": "^8.2.2",
    "hardhat": "^2.26.0",
    "hardhat-gas-reporter": "2.3.0",
    "prettier": "^3.2.5",
    "solidity-coverage": "0.8.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4",
    "viem": "2.7.6",
    "dotenv": "^16.4.5"
  }
}
