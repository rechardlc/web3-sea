{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16"
    }
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*",
    "test/**/*",
    "ignition/**/*"
  ]
}

